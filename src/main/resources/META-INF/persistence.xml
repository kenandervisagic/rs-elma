<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="ticketReservationPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.rs.entity.EventOrganizer</class>
        <class>org.rs.entity.Event</class>
        <class>org.rs.entity.Location</class>
        <class>org.rs.entity.Ticket</class>
        <class>org.rs.entity.User</class>
        <class>org.rs.entity.Reservation</class>
        <class>org.rs.entity.Administrator</class>

        <properties>
            <!-- Database connection settings -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3305/ticket_reservation"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="keno"/>

            <!-- Hibernate settings -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
